    {% for item in testimonial %}
    <div class="testimony mx-8 hidden">
      <p class="text-gray-900 dark:text-stone-100 italic py-6 md:px-16 md:py-4 text-lg leading-relaxed">
        {{ item.texte }}
      </p>
      <div class="flex justify-center px-6 pt-2 pb-6 md:py-6">
