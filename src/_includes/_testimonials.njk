    {% endfor %}
    <ol class="flex justify-center gap-4">
    {% for item in testimonial %}
      <li>
        <button onclick="chooseTestimony({{ loop.index }})" aria-pressed="false" class="testimonial-button testimonial-button-inactive"></button>
      </li>
    {% endfor %}
    </ol>
  </div>
</div>



<script>
  const testimonialButton = document.getElementsByClassName('testimonial-button');
  const testimonies = document.getElementsByClassName('testimony');
  let slideIndex = 1;

  let intervalID = setInterval(nextTestimony,4000);
  
  function showTestimony(n){
    if(n>testimonies.length){slideIndex = 1}
    else{slideIndex=n}
    for(let i=0; i<testimonies.length; i++){
      testimonies[i].style.display = "none";
      testimonialButton[i].classList.remove('testimonial-button-active');
      testimonialButton[i].classList.add('testimonial-button-inactive');
      testimonialButton[i].setAttribute("aria-pressed","false");
    }
    testimonies[slideIndex-1].style.display = "block";
    testimonialButton[slideIndex-1].classList.add('testimonial-button-active');
    testimonialButton[slideIndex-1].classList.remove('testimonial-button-inactive');
    testimonialButton[slideIndex-1].setAttribute("aria-pressed","true");
  }

  function chooseTestimony(n){
    clearInterval(intervalID);
    intervalID = setInterval(nextTestimony,4000);
    showTestimony(n);
  }

  function nextTestimony(){
    slideIndex++;
    showTestimony(slideIndex);
  }

  window.addEventListener("load",()=>{
    showTestimony(slideIndex);
  })

</script>
