<script>
  const delay = 4000;
  const testimonies = document.getElementsByClassName('testimony');
  let slideIndex = 1;
  let onPause = window.matchMedia("(prefers-reduced-motion: reduce)").matches;
  const playButton =  document.getElementById('playButton');

  let intervalID = setInterval(nextTestimony,delay);

  function pauseTimer(){
    clearInterval(intervalID);
    if(onPause){
      intervalID = setInterval(nextTestimony,delay);
      onPause = false;
      playButton.classList.add('play');
      playButton.classList.remove('pause');
    }
    else{
      playButton.classList.add('pause');
      playButton.classList.remove('play');
      onPause = true;
    }
  }
  
  function showTestimony(n){
    if(n>testimonies.length){slideIndex = 1}
    else{slideIndex=n}
    for(let i=0; i<testimonies.length; i++){
      testimonies[i].style.display = "none";
    }
    testimonies[slideIndex-1].style.display = "block";
  }

  function nextTestimony(){
    slideIndex++;
    showTestimony(slideIndex);
  }

  window.addEventListener("load",()=>{
    showTestimony(slideIndex);
    if(onPause){
      playButton.classList.add('pause');
    }
    else{
      playButton.classList.add('play');
    }
  })

</script>
