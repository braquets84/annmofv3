<div class="flex flex-row flex-wrap justify-center gap-8 m-8">
  {% for item in services %}
    <div class="service-card pt-8">
      {# <div class="service-img-container">
        <img class="service-img" src={{ item.imgurl }} alt="" width=80px height=80px>
      </div> #}
      <div>
        <h2 class="service-h2 highlight-green fraunces drop-shadow-lg">{{ item.title }}</h2>
        <p class="mt-2 text-gray-600 dark:text-stone-100 p-4 leading-relaxed">{{ item.texte }}</p>
      </div>
      <div class="mt-4 text-right relative bottom-2">
        <a href={{ item.link }} class="text-xl font-medium text-green-800 dark:text-green-200">{{ item.cta }}</a>
      </div>
    </div>
  {% endfor %}
</div>