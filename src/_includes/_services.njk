<div class="flex flex-row flex-wrap justify-center gap-8 mx-8">
  {% for item in services %}
    <div class="service-card pt-8">
      <div>
        <h2 class="text-color text-3xl font-semibold rounded-md px-4 py-2 w-fit big-font textshadow">{{ item.title }}</h2>
        <p class="mt-2 p-4 leading-relaxed">{{ item.texte }}</p>
      </div>
      <div class="border border-color mt-4 neu-low hover:inset-low w-fit rounded-lg px-4 py-2 self-end">
        <a href={{ item.link }} class="text-base lg:text-xl">{{ item.cta }}</a>
      </div>
    </div>
  {% endfor %}
</div>