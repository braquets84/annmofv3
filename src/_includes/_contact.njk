<form class="bg-white mx-auto m-8 p-8 rounded-lg shadow-lg max-w-xl" name="contact" netlify>
  <h2 class="highlight-green mb-16 text-center text-3xl fraunces">Formulaire de contact</h2>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name">
        Prénom
      </label>
      <input aria-required="false" class="appearance-none block w-full bg-stone-100 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="grid-first-name" type="text" placeholder="Jade">
    </div>
    <div class="w-full md:w-1/2 px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-last-name">
        Nom
      </label>
      <input aria-required="false" class="appearance-none block w-full bg-stone-100 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-last-name" type="text" placeholder="Martin">
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="email">
        * E-mail
      </label>
      <input required aria-required="true" class="appearance-none block w-full bg-stone-100 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="email" type="email" placeholder="xyz@exemple.com" oninvalid="this.setCustomValidity('Vous devez saisir votre email')" oninput="this.setCustomValidity('')">
      <p class="text-gray-600 text-xs italic">Nécessaire pour pouvoir vous répondre</p>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="message">
        * Message
      </label>
      <textarea required aria-required="true" class="no-resize appearance-none block w-full bg-stone-100 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 h-48 resize-none" id="message" oninvalid="this.setCustomValidity('Vous devez saisir votre message')" oninput="this.setCustomValidity('')"></textarea>
      <p class="text-gray-600 text-xs italic">Votre message</p>
    </div>
  </div>
  <div class="flex justify-center items-center gap-2 -mx-3 mb-6">
    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="rgpd">
      * 
      <input class="bg-stone-100 text-gray-700 border border-gray-200 rounded -pb-8 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="checkbox" id="rgpd" required oninvalid="this.setCustomValidity('Vous devez cocher cette case pour que nous puissions vous répondre')" oninput="this.setCustomValidity('')">
      J'autorise <span class="bimbo text-base">annmof</span> à m'envoyer des e-mails
    </label>
  </div>
  <div class="md:flex md:items-center">
    <div class="md:w-1/3">
      <input class="shadow bg-green-700 hover:bg-green-500 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit" value="Envoyer" />
    </div>
    <div class="md:w-2/3"></div>
  </div>
</form>